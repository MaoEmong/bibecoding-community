{{>layout/header}}
<h1>사원 수정</h1>
<form method="post" action="/employees/{{id}}/update" onsubmit="return confirm('수정하시겠습니까?');">
    <div><label>이름</label><input name="name" value="{{form.name}}"></div>
    <div><label>이메일</label><input name="email" value="{{form.email}}"></div>
    <div>
        <label>부서</label>
        <select name="departmentId">
            {{#departmentOptions}}
                <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
            {{/departmentOptions}}
        </select>
    </div>
    <div>
        <label>직급</label>
        <select name="positionId">
            {{#positionOptions}}
                <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
            {{/positionOptions}}
        </select>
    </div>
    <div>
        <label>상태</label>
        <select name="status">
            {{#statuses}}
                <option value="{{name}}">{{label}}</option>
            {{/statuses}}
        </select>
    </div>
    <div><label>입사일</label><input type="date" name="hiredAt" value="{{form.hiredAt}}"></div>
    <button type="submit">수정</button>
    <a href="/employees/{{id}}">상세</a>
</form>
{{>layout/footer}}
